{
    "manifest_version": 2,
    "name": "Facebook图片信息",
    "description": "显示Facebook图片信息",
    "author": "dev-coco",
    "version": "1.0.5",
    "browser_action": {
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/*"],
            "js": ["inject.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "permissions": [
      "*://*.facebook.com/*"
    ]
}
